<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="?attr/colorSurface">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Header -->
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Selecciona las ruedas a medir"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
        android:textColor="?attr/colorPrimary"
        android:textAlignment="center"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="Toca las ruedas que deseas medir. La primera será la rueda de referencia (TOE = 0°)."
        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
        android:textColor="?attr/colorOnSurface"
        android:textAlignment="center" />

    <!-- Grid Container for 4 wheels -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Top Row: Front wheels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- Front Left Wheel -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/frontLeftCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="2dp"
                app:strokeColor="@android:color/transparent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorSurfaceVariant">

                    <!-- Indicador de estabilidad en la esquina superior izquierda -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/frontLeftStabilityIndicator"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|start"
                        android:layout_margin="8dp"
                        android:text="⚪"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginBottom="12dp"
                            android:src="@drawable/neumatico"
                            android:contentDescription="Rueda Delantera Izquierda"
                            android:scaleType="fitCenter" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DELANTERA\nIZQUIERDA"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/frontLeftDataText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Haz clic para ver datos en tiempo real"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textAlignment="center"
                            android:visibility="visible" />

                        <!-- Botón para fijar datos -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/frontLeftFixButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_marginTop="8dp"
                            android:text="FIJAR DATOS"
                            android:textSize="10sp"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:visibility="gone" />

                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Front Right Wheel -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/frontRightCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="2dp"
                app:strokeColor="@android:color/transparent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorSurfaceVariant">

                    <!-- Indicador de estabilidad en la esquina superior izquierda -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/frontRightStabilityIndicator"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|start"
                        android:layout_margin="8dp"
                        android:text="⚪"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginBottom="12dp"
                            android:src="@drawable/neumatico"
                            android:contentDescription="Rueda Delantera Derecha"
                            android:scaleType="fitCenter" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DELANTERA\nDERECHA"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/frontRightDataText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Haz clic para ver datos en tiempo real"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textAlignment="center"
                            android:visibility="visible" />

                        <!-- Botón para fijar datos -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/frontRightFixButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_marginTop="8dp"
                            android:text="FIJAR DATOS"
                            android:textSize="10sp"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:visibility="gone" />

                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Bottom Row: Rear wheels -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <!-- Rear Left Wheel -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rearLeftCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="2dp"
                app:strokeColor="@android:color/transparent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorSurfaceVariant">

                    <!-- Indicador de estabilidad en la esquina superior izquierda -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/rearLeftStabilityIndicator"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|start"
                        android:layout_margin="8dp"
                        android:text="⚪"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginBottom="12dp"
                            android:src="@drawable/neumatico"
                            android:contentDescription="Rueda Trasera Izquierda"
                            android:scaleType="fitCenter" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TRASERA\nIZQUIERDA"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/rearLeftDataText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Haz clic para ver datos en tiempo real"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textAlignment="center"
                            android:visibility="visible" />

                        <!-- Botón para fijar datos -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/rearLeftFixButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_marginTop="8dp"
                            android:text="FIJAR DATOS"
                            android:textSize="10sp"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:visibility="gone" />

                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Rear Right Wheel -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/rearRightCard"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:strokeWidth="2dp"
                app:strokeColor="@android:color/transparent">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="?attr/colorSurfaceVariant">

                    <!-- Indicador de estabilidad en la esquina superior izquierda -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/rearRightStabilityIndicator"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="top|start"
                        android:layout_margin="8dp"
                        android:text="⚪"
                        android:textSize="20sp"
                        android:gravity="center"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="16dp">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_marginBottom="12dp"
                            android:src="@drawable/neumatico"
                            android:contentDescription="Rueda Trasera Derecha"
                            android:scaleType="fitCenter" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TRASERA\nDERECHA"
                            android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textAlignment="center"
                            android:textStyle="bold" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/rearRightDataText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Haz clic para ver datos en tiempo real"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textAlignment="center"
                            android:visibility="visible" />

                        <!-- Botón para fijar datos -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/rearRightFixButton"
                            android:layout_width="wrap_content"
                            android:layout_height="32dp"
                            android:layout_marginTop="8dp"
                            android:text="FIJAR DATOS"
                            android:textSize="10sp"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:visibility="gone" />

                    </LinearLayout>
                </FrameLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/clearSelectionButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:text="Limpiar"
            android:enabled="false" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/startMeasurementButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginStart="8dp"
            android:text="Iniciar Medición"
            android:enabled="false" />

    </LinearLayout>

</LinearLayout>

</ScrollView>
